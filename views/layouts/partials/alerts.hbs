{{#if success.length}}
	<div data-notify="container" class="col-xs-11 col-sm-3 alert fade-in alert-success alert-container" role="alert">
		<button type="button" aria-hidden="true" class="close" data-notify="dismiss">×</button>
		<span data-notify="icon"></span>
		<span data-notify="title"><strong>{{success.[0].title}}</strong></span>
		<span data-notify="message">{{success.[0].msg}}</span> 
		
		{{#if success.[0].bar}}
		<div class="progress" data-notify="progressbar">
			<div class="progress-bar progress-bar-success" role="progressbar" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100" style="width: 0%;"></div>
		</div>
		{{/if}}

		{{#if success.[0].url.length}}
		<a href="{{success.[0].url}}" target="{{success.[0].target}}" data-notify="url"></a>
		{{/if}}
	</div>
{{/if}}
