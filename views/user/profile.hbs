<div class="container">
    <form method="post" action="/update-profile/{{user.uid}}">
        <div class="row">
            <button class="btn btn-sm btn-warning" id="saveChanges">{{{__ "Save Changes"}}}</button>
            <div class="switch col-xs-2 col-sm-1 col-md-1 col-lg-1 pull-right">
            <input id="checkbox-toggle" class="checkbox-toggle checkbox-toggle-yes-no show-edit editProfile" type="checkbox">
            <label  id="togglecheckboxs" for="checkbox-toggle"></label>
          </div>
        </div>
    <div class="row">     
      <div class="col-md-4">
      <div class="row" id="profile-image" data-img="{{user.avatar}}" data-x="" data-y="" data-width="" data-height="" data-user="{{user.uid}}">
      <img src="/uploads/avatar/{{user.avatar}}"  width="100%" class="img-responsive img-thumbnail"/>
      </div>
      <div class="row" id="profile-quote">
        <blockquote>{{user.info.quote}}</blockquote>
      </div>
      </div>
      <div class="col-md-8">
        <div class="row"  id="profile-info">
          <h3>{{{__ 'Personal info'}}}</h3>
          <div class="info-text">{{{user.info.personal_text}}}</div>
        </div>
        <div class="row">
          <ul class="details">
            <li id="name"><span>{{{__ 'Name'}}}</span><a>{{user.name}}</a></li>
            <li id="birthday"><span>{{{__ 'Birthday'}}}</span><a>{{birthday}}</a></li>
            <li id="address"><span>{{{__ 'Address'}}}</span><a>{{user.address.street}}<a></li>
            <li id="postalcode"><span>{{{__ 'Postalcode'}}}</span><a>{{user.address.postalcode}}</a></li>
            <li id="city"><span>{{{__ 'City'}}}</span><a>{{user.address.city}}</a></li>
            <li id="country"><span>{{{__ 'Country'}}}</span><a>{{user.address.country}}</a></li>
            <li id="email"><span>{{{__ 'Email'}}}</span><a href="mailto:{{user.email}}">{{user.email}}</a></li>
            <li id="phone"><span>{{{__ 'Phone'}}}</span><a>{{user.phone}}</a></li>
            <li id="website"><span>{{{__ 'Website'}}}</span> <a href="{{user.website}}">{{user.website}}</a></li>
        </ul>
        </div>
      </div>
      </form>
      </div>
    <!-- End Profile -->