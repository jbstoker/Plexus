<div class="container">
    <form method="post" action="/update-user/{{user.id}}">
        <div class="row">
            <button class="btn btn-sm btn-warning" id="saveChanges">{{{__ "Save Changes"}}}</button><input type="checkbox" class="input-sm" data-height="30px" data-toggle="toggle" data-on="<svg style='height:20px' class='icon-edit-3'><use xlink:href='/fonts/icons.svg#icon-edit-3'></use></svg>" data-off="<svg style='height:20px' class='icon-preview-1'><use xlink:href='/fonts/icons.svg#icon-preview-1'></use></svg>" data-offstyle="primary" data-size="mini" data-style="pull-right icon-toggle" data-onstyle="warning" id="editProfile"/>
        </div>
    <div class="row">     
      <div class="col-md-4">
      <div class="row" id="profile-image">
      <div id="kv-avatar-errors" class="center-block" style="width:100%;display:none"></div>
        <form class="text-center" action="/avatar_update/{{user.id}}" method="post" enctype="multipart/form-data">
            <div class="kv-avatar center-block col-md-12">
                <input id="avatar" type="file" class="file-loading">
            </div>
        </form>
      </div>
      <div class="row" id="profile-quote">
        <blockquote>{{user.info.quote}}</blockquote>
      </div>
      </div>
      <div class="col-md-8">
        <div class="row"  id="profile-info">
          <h3>{{{__ 'Personal info'}}}</h3>
          <p>{{user.info.personal_text}}</p>
        </div>
        <div class="row">
          <ul class="details">
            <li id="name"><span>{{{__ 'Name'}}}</span><a>{{user.name}}</a></li>
            <li id="birthday"><span>{{{__ 'Birthday'}}}</span><a>{{user.birthday}}</a></li>
            <li id="address"><span>{{{__ 'Address'}}}</span><a>{{user.address.street}}<a><a>11</a></li>
            <li id="postalcode"><span>{{{__ 'Postalcode'}}}</span><a>{{user.address.postalcode}}</a></li>
            <li id="city"><span>{{{__ 'City'}}}</span><a>{{user.address.city}}</a></li>
            <li id="country"><span>{{{__ 'Country'}}}</span><a>{{user.address.country}}</a></li>
            <li id="email"><span>{{{__ 'Email'}}}</span><a href="mailto:{{user.email}}">{{user.email}}</a></li>
            <li id="phone"><span>{{{__ 'Phone'}}}</span><a>{{user.phone}}</a></li>
            <li id="website"><span>{{{__ 'Website'}}}</span> <a href="{{user.website}}">{{user.website}}</a></li>
        </ul>
        </div>
      </div>
      </form>
      </div>
    <!-- End Profile -->